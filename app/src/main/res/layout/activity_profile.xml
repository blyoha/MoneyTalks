<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="database.UserProfile"
    android:orientation="vertical"
    android:background="#F0F4F7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="250dp" />

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="true"
            android:text="User User"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No money no honey"
            android:textSize="20sp"
            android:includeFontPadding="true"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_below="@+id/full_name"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/full_profile_data_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/status"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/profile_image"
            android:background="#3AB6EC"
            android:text="Profile"
            android:visibility="visible" />

        <Button
            android:id="@+id/subscriptions_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/full_profile_data_btn"
            android:layout_marginVertical="20dp"
            android:background="#3AB6EC"
            android:text="Subscriptions"
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <Button
            android:id="@+id/followers_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/full_profile_data_btn"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/subscriptions_list"
            android:background="#3AB6EC"
            android:text="Followers"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My posts"
            android:layout_below="@id/subscriptions_list"
            android:layout_marginVertical="1sp"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30sp"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/post_im"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:paddingLeft="20sp"
            />

        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="First money"
            android:layout_toRightOf="@id/post_im"
            android:paddingLeft="10sp"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/post_im"
            android:paddingLeft="10sp"
            android:text="Sharign my experience"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_im"
            android:textSize="16sp"
            android:paddingLeft="20sp"/>

    </RelativeLayout>

</LinearLayout>